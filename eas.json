{
  "cli": {
    "version": ">= 7.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "env": {
        "APP_ENV": "development",
        "API_URL": "http://localhost:5000"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "env": {
        "APP_ENV": "staging",
        "API_URL": "https://staging-api.nox.social"
      }
    },
    "staging": {
      "distribution": "internal",
      "channel": "staging",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "bundleIdentifier": "social.nox.staging"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "env": {
        "APP_ENV": "staging",
        "APP_NAME": "Nox (Staging)",
        "API_URL": "https://staging-api.nox.social",
        "IOS_BUNDLE_ID": "social.nox.staging",
        "ANDROID_PACKAGE": "social.nox.staging"
      }
    },
    "production": {
      "distribution": "store",
      "channel": "production",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "bundleIdentifier": "social.nox"
      },
      "android": {
        "buildType": "aab",
        "gradleCommand": ":app:bundleRelease"
      },
      "env": {
        "APP_ENV": "production",
        "APP_NAME": "Nox",
        "EXPO_PUBLIC_API_URL": "https://rork-api-prod-3a4b8043e7dd.herokuapp.com/api",
        "EXPO_PUBLIC_USE_MOCK_DATA": "false",
        "EXPO_PUBLIC_SENTRY_ENVIRONMENT": "production",
        "EXPO_PUBLIC_DEBUG_MODE": "false",
        "IOS_BUNDLE_ID": "social.nox",
        "ANDROID_PACKAGE": "social.nox"
      },
      "autoIncrement": true
    },
    "production-ios": {
      "extends": "production",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release"
      }
    },
    "production-android": {
      "extends": "production",
      "android": {
        "buildType": "aab"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "1234567890",
        "appleTeamId": "ABCDE12345"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "production",
        "releaseStatus": "completed"
      }
    },
    "staging": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "1234567890",
        "appleTeamId": "ABCDE12345"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal",
        "releaseStatus": "completed"
      }
    }
  }
}
