{
  "name": "rork-nightlife-backend",
  "version": "2.0.0",
  "description": "Rork Nightlife API - Business profiles, events, social features, and venue management",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "jest --coverage",
    "lint": "eslint src/",
    "seed": "node src/utils/seedData.js",
    "seed:all": "node src/utils/seedGrowthFeatures.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && cp .env.example .env && echo '\nâœ… Setup complete! Edit .env with your credentials.'",
    "deploy:pm2": "pm2 start src/server.js --name rork-api --env production",
    "deploy:pm2:cluster": "pm2 start src/server.js --name rork-api --env production --instances 2 --exec-mode cluster",
    "deploy:restart": "pm2 restart rork-api",
    "deploy:stop": "pm2 stop rork-api",
    "deploy:logs": "pm2 logs rork-api",
    "deploy:status": "pm2 status",
    "backup": "node scripts/backup-database.js",
    "backup:restore": "node scripts/restore-database.js",
    "backup:setup-cron": "./scripts/setup-backup-cron.sh",
    "backup:logs": "tail -f logs/backup-cron.log",
    "test:email": "node test-email.js"
  },
  "keywords": [
    "nightlife",
    "social",
    "api"
  ],
  "author": "Rork Nightlife",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^10.37.0",
    "@sentry/profiling-node": "^10.37.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.9.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.17",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "validator": "^13.15.26",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/socket.io": "^3.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
