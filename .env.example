# Nox Nightlife App - Environment Configuration
# Copy this file to .env and fill in your actual values
# All EXPO_PUBLIC_* variables are exposed to the client app
# Variables without EXPO_PUBLIC_ prefix are backend-only

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (no trailing slash)
EXPO_PUBLIC_API_URL=https://api.nox.app/v1

# API Request Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Environment
# =============================================================================

# Node Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable contact syncing feature
EXPO_PUBLIC_ENABLE_CONTACT_SYNC=true

# Enable/disable Instagram integration
EXPO_PUBLIC_ENABLE_INSTAGRAM_SYNC=true

# Enable/disable Toast POS integration
EXPO_PUBLIC_ENABLE_TOAST_INTEGRATION=true

# Enable/disable mock data (development only)
EXPO_PUBLIC_USE_MOCK_DATA=true

# =============================================================================
# Toast POS Integration
# Reference: https://doc.toasttab.com/doc/devguide/apiAuthentication.html
# =============================================================================

# Toast POS OAuth Client ID
EXPO_PUBLIC_TOAST_CLIENT_ID=your_toast_client_id_here

# Toast POS OAuth Client Secret (backend only - never expose to client)
TOAST_CLIENT_SECRET=your_toast_client_secret_here

# Toast POS API Base URL
EXPO_PUBLIC_TOAST_API_URL=https://ws-api.toasttab.com

# Toast POS Webhook Secret (for verifying webhook signatures)
TOAST_WEBHOOK_SECRET=your_toast_webhook_secret_here

# =============================================================================
# Instagram Integration
# Reference: https://developers.facebook.com/docs/instagram-api
# Get credentials from: https://developers.facebook.com/apps/
# Note: Use Instagram Graph API for production (Basic Display API has limited features)
# =============================================================================

# Instagram OAuth Client ID (App ID from Facebook Developer Portal)
EXPO_PUBLIC_INSTAGRAM_CLIENT_ID=your_instagram_client_id_here

# Instagram OAuth Client Secret (backend only - never expose to client)
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here

# Instagram OAuth Redirect URI
EXPO_PUBLIC_INSTAGRAM_REDIRECT_URI=nox://instagram-callback

# Instagram API Base URL
EXPO_PUBLIC_INSTAGRAM_API_URL=https://graph.instagram.com

# =============================================================================
# Payment Processing
# =============================================================================

# Payment Provider (stripe, square, or toast)
EXPO_PUBLIC_PAYMENT_PROVIDER=stripe

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# =============================================================================
# Analytics & Error Tracking
# =============================================================================

# Sentry DSN for error tracking
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
EXPO_PUBLIC_SENTRY_ENVIRONMENT=development

# =============================================================================
# App Configuration
# =============================================================================

# App Name
EXPO_PUBLIC_APP_NAME=Nox

# Contact & Support
EXPO_PUBLIC_SUPPORT_EMAIL=support@nox.app
EXPO_PUBLIC_WEBSITE_URL=https://nox.app

# Legal
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://nox.app/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://nox.app/terms

# =============================================================================
# Security & Rate Limiting
# =============================================================================

# Vibe check cooldown (milliseconds) - default 15 minutes
EXPO_PUBLIC_VIBE_CHECK_COOLDOWN=900000

# Vibe data decay time (milliseconds) - default 2 hours
EXPO_PUBLIC_VIBE_DATA_DECAY=7200000

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable debug logging
EXPO_PUBLIC_DEBUG_MODE=false

# Enable React Query Devtools
EXPO_PUBLIC_REACT_QUERY_DEVTOOLS=false
